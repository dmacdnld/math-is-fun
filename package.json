{
  "name": "math-trivia",
  "version": "0.0.1",
  "description": "A fun math trivia game!",
  "author": "Daniel MacDonald <dnmacdnld@gmail.com>",
  "contributors": [
    {
      "name": "Daniel MacDonald",
      "email": "dnmacdnld@gmail.com"
    }
  ],
  "dependencies": {
    "socket.io": "^0.9.16",
    "express": "^3.5.1",
    "react": "^0.10.0",
    "moment": "^2.6.0",
    "lodash": "^2.4.1"
  },
  "devDependencies": {
    "mocha": "^1.18.2",
    "chai": "^1.9.1",
    "socket.io-client": "^0.9.16",
    "sinon": "^1.9.1",
    "sinon-chai": "^2.5.0",
    "reactify": "^0.11.0",
    "envify": "^1.2.1",
    "watchify": "^0.6.4",
    "browserify": "^3.41.0",
    "uglify-js": "^2.4.13"
  },
  "scripts": {
    "start": "node app.js",
    "start-dev": "forever --exitcrash -o logs/out.log -e logs/err.log start -c nodemon app.js",
    "build": "NODE_ENV=production browserify -t reactify -t envify public/js/main.js | uglifyjs --screw-ie8 -mc warnings=false > public/js/build/bundle.js",
    "build-dev": "NODE_ENV=development watchify -t reactify -e public/js/main.js -o public/js/build/bundle.js -dv",
    "test": "NODE_ENV=test ./node_modules/.bin/mocha"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dmacdnld/math-trivia.git"
  },
  "engines": {
    "node": ">=0.10"
  }
}
